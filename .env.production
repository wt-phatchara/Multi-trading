# Production Environment Configuration
# ⚠️ NEVER commit this file to version control!
# ⚠️ Use secrets management in production!

# Security
MASTER_PASSWORD=your_strong_master_password_here_change_this

# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=trading_db
DB_USER=trading_user
DB_PASSWORD=your_secure_db_password_change_this

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_change_this

# Exchange (stored encrypted, these are for initial setup)
EXCHANGE_NAME=binance
EXCHANGE_API_KEY=encrypted_via_secrets_manager
EXCHANGE_API_SECRET=encrypted_via_secrets_manager
EXCHANGE_TESTNET=false

# Trading Configuration
TRADING_MODE=live  # paper or live
DEFAULT_SYMBOL=BTC/USDT
LEVERAGE=5
POSITION_SIZE_PERCENT=1.0
TIMEFRAME=5m

# Risk Management
MAX_DAILY_LOSS_PERCENT=3.0
MAX_POSITION_SIZE=1000
STOP_LOSS_PERCENT=2.0
TAKE_PROFIT_PERCENT=4.0
MAX_OPEN_POSITIONS=3

# Strategy
STRATEGY=advanced
RSI_PERIOD=14
RSI_OVERBOUGHT=70
RSI_OVERSOLD=30
USE_AI_PREDICTIONS=true
CONFIDENCE_THRESHOLD=0.7

# Monitoring & Observability
SENTRY_DSN=https://your_sentry_dsn_here
ENABLE_METRICS=true
ENABLE_HEALTH_CHECK=true
HEALTH_CHECK_PORT=8000
METRICS_PORT=9090

# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_secure_grafana_password_change_this

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json  # json or text
ENABLE_AUDIT_LOG=true

# Performance
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
REDIS_POOL_SIZE=10

# Circuit Breaker
CIRCUIT_BREAKER_FAIL_MAX=5
CIRCUIT_BREAKER_TIMEOUT=60

# Rate Limiting
RATE_LIMIT_CALLS=10
RATE_LIMIT_WINDOW=1

# Kill Switch
ENABLE_KILL_SWITCH=true
KILL_SWITCH_MAX_DRAWDOWN=10.0
KILL_SWITCH_MAX_DAILY_LOSS=5.0
